local player = game.Players.LocalPlayer
local camera = workspace.CurrentCamera
local ui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
ui.Name = "CameraControlUI"

-- Tạo Nút Bật
local btnOn = Instance.new("TextButton", ui)
btnOn.Text = "Bật Ghim"
btnOn.Size = UDim2.new(0, 200, 0, 50)
btnOn.Position = UDim2.new(0.5, -100, 0.5, -60)

-- Tạo Nút Tắt
local btnOff = Instance.new("TextButton", ui)
btnOff.Text = "Tắt Ghim"
btnOff.Size = UDim2.new(0, 200, 0, 50)
btnOff.Position = UDim2.new(0.5, -100, 0.5, 0)

local function ghimCamera()
    camera.CameraSubject = player.Character:FindFirstChild("Humanoid")
    camera.CameraType = Enum.CameraType.Follow
end

local function tatGhimCamera()
    camera.CameraSubject = nil
    camera.CameraType = Enum.CameraType.Custom
end

btnOn.MouseButton1Click:Connect(ghimCamera)
btnOff.MouseButton1Click:Connect(tatGhimCamera)
